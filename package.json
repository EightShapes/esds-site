{
  "name": "esds-site",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all --parallel build:styles build:scripts --parallel watch:styles watch:scripts watch:serve",
    "watch:serve": "npx @11ty/eleventy --serve",
    "watch:scripts": "chokidar \"src/scripts/*.js\" \"src/site-components/**/*.js\" -c \"npm run build:scripts\"",
    "build:scripts": "npx esbuild --bundle src/scripts/main.js --outfile=dist/scripts/main.js --format=esm",
    "build:styles": "npx sass --load-path=node_modules src/styles:dist/styles",
    "watch:styles": "chokidar \"src/styles/**/*.scss\" -c \"npm run build:styles\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Kevin Powell <kevinmpowell@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@eightshapes/esds-card": "^0.3.1",
    "@eightshapes/esds-example-code-pair": "^0.12.0",
    "@eightshapes/esds-icon": "^0.4.1",
    "@eightshapes/esds-list-group": "^0.2.0",
    "@eightshapes/esds-rendered-example": "^0.8.0",
    "@eightshapes/esds-tabs": "^0.3.1",
    "@eightshapes/esds-tokens": "^0.4.1",
    "@eightshapes/esds-visual-style": "^0.3.1",
    "scrollmonitor": "^1.2.4"
  },
  "devDependencies": {
    "@eightshapes/slotify": "^0.6.1",
    "chokidar-cli": "^2.1.0",
    "esbuild": "^0.6.27",
    "lit-element": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.26.10",
    "stylelint": "^13.7.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^7.1.0"
  }
}
