---
title: EightShapes Design System
---

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="keywords" content="{{ meta_keywords | default(global.meta_keywords) }}">
        <meta name="description" content="{{ meta_description | default(global.meta_description) }}">
        <meta name="HandheldFriendly" content="True">
        <meta name="format-detection" content="telephone=no">
        <meta name="MobileOptimized" content="320">
        <meta name="viewport" content="width=device-width, minimum-scale=1.0">
        <!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
        <meta http-equiv="cleartype" content="on">
        <title>{{ title }}</title>
        <link href="https://fonts.googleapis.com/css2?family=Barlow+Semi+Condensed:wght@300;500&family=Roboto+Mono:wght@500&display=swap" rel="stylesheet" />
        <link rel="stylesheet" href="/styles/main.css">
        <link rel="icon" href="/svg/eightshapes-mark.svg">
        <link rel="mask-icon" href="/svg/eightshapes-mark.svg" color="#000000">

        {% block head_elements %}
        {% endblock %}
    </head>
    <body class="{{ body_classes }}">
      <esds-site-page-shell {% if title %}title="{{ title }}"{% endif %} {% if deck %}deck="{{ deck }}"{% endif %}>
        <div class="esds-site-page-shell__nav-content esds-container--dark-primary" slot="nav">
          <h1 class="esds-site-page-shell__logo">
            {% include '../svg/eightshapes-logo.svg' %}
          </h1>
          <div class="esds-site-page-shell__nav-scroll-wrapper">
            {% macro nav_item(href, label) %}
              <esds-list-item href="{{ href }}" {% if page.url == href %}selected{% endif %}>{{ label }}</esds-list-item>
            {% endmacro %}
            <esds-list-group>
              {{ nav_item("/", "Home") }}
              {{ nav_item("/getting-started", "Getting started") }}
              {{ nav_item("/release-history", "Release history") }}
              <esds-list-group header="Visual Style" collapsible collapsed>
                {{ nav_item("/color", "Color") }}
                {{ nav_item("/typography", "Typography") }}
                {{ nav_item("/space", "Space") }}
                {{ nav_item("/tokens", "Tokens") }}
              </esds-list-group>
              <esds-list-group header="UI Components" collapsible>
                {%- for post in collections['Component Page'] | postTitleAlphaSort -%}
                  <esds-list-item href="{{ post.url }}" {% if page.url == post.url %}selected{% endif %}>{{ post.data.title }}</esds-list-item>
                {%- endfor -%}
              </esds-list-group>
              <esds-list-group header="UX Patterns" collapsible collapsed></esds-list-group>
              <esds-list-group header="Charts" collapsible collapsed></esds-list-group>
              <esds-list-item href="/contribute" size="small" {% if page.url == href %}selected{% endif %}>
                <esds-icon use="/svg/esds-icons.svg#pencil" slot="icon"></esds-icon>
                Contribute
              </esds-list-item>
              <esds-list-item href="/contribute" size="small" {% if page.url == href %}selected{% endif %}>
                <esds-icon use="/svg/esds-icons.svg#notification" slot="icon"></esds-icon>
                Request a feature
              </esds-list-item>
              <esds-list-item href="/submit-defect" size="small" {% if page.url == href %}selected{% endif %}>
                <esds-icon use="/svg/esds-icons.svg#alert-warning" slot="icon"></esds-icon>
                Submit a defect
              </esds-list-item>
              <esds-list-item href="/get-help" size="small" {% if page.url == href %}selected{% endif %}>
                <esds-icon use="/svg/esds-icons.svg#help" slot="icon"></esds-icon>
                Get Help
              </esds-list-item>
            </esds-list-group>
          </div>
        </div>
        {{ content | safe }}
      </esds-site-page-shell>
      <script src="/scripts/main.js"></script>
    </body>
</html>
