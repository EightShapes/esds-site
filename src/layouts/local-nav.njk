---
layout: 'base.njk'
body_classes: 'local-nav-layout'
---
<div class="esds-site-component-layout-body" style="position:relative;">
    <div class="esds-site-component-layout-body__content">
      <esds-tabs>
      {% for tab in collections[tabsTag] | componentTabSort %}
        <esds-tab label="{{tab.data.title}}">
          <div class="esds-site-component-layout-body__tab">
            <esds-prose>
              {{ tab.templateContent | safe }}
            </esds-prose>
          </div>
        </esds-tab>
      {% endfor %}
      </esds-tabs>
    </div>
    <div class="esds-site-component-layout-body__local-nav">
      <div class="esds-site-component-layout-body__local-nav-inner">
      </div>
    </div>
</div>
